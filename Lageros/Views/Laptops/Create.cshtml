@model Lageros.Models.Laptop

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Novi laptop</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="INV" class="control-label"></label>
                <input asp-for="INV" class="form-control" />
                <span asp-validation-for="INV" class="text-success"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-success"></span>
            </div>
            <div class="form-group">
                <label asp-for="RAM" class="control-label"></label>
                <input asp-for="RAM" class="form-control" />
                <span asp-validation-for="RAM" class="text-success"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPU" class="control-label"></label>
                <input asp-for="CPU" class="form-control" />
                <span asp-validation-for="CPU" class="text-success"></span>
            </div>
            <div class="form-group">
                <label asp-for="HDD" class="control-label"></label>
                <input asp-for="HDD" class="form-control" />
                <span asp-validation-for="HDD" class="text-success"></span>
            </div>
            <div class="form-group">
                <label asp-for="WINDOWS" class="control-label"></label>
                <input asp-for="WINDOWS" class="form-control" />
                <span asp-validation-for="WINDOWS" class="text-success"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SPREMI" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-dark">Nazad na listu tonera</a>
            </div>
        </form>
    </div>
</div>


