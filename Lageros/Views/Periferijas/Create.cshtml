@model Lageros.Models.Periferija

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nova periferija</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-success"></div>
            <div class="form-group">
                <label asp-for="IzborId" class="control-label"></label>
                <select asp-for="IzborId" class ="form-control" asp-items="ViewBag.IzborId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-success"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolicnina" class="control-label"></label>
                <input asp-for="Kolicnina" class="form-control" />
                <span asp-validation-for="Kolicnina" class="text-success"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SPREMI" class="btn btn-success" /> |
                <input type="submit" asp-action="Index" value="Nazad na listu periferije" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
