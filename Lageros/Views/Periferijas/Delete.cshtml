@model Lageros.Models.Periferija

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Brisanje</h1>

<h3>Da li ste sigurni da želite obrisati traženu periferiju?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Izbor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Izbor.NazivPeriferije)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kolicnina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kolicnina)
        </dd>
