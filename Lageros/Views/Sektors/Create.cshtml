@model Lageros.Models.Sektor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novi sektor</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-success"></div>
            <div class="form-group">
                <label asp-for="NazivSektora" class="control-label"></label>
                <input asp-for="NazivSektora" class="form-control" />
                <span asp-validation-for="NazivSektora" class="text-success"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SPREMI" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-dark">Nazad na listu sektora</a>
            </div>
        </form>
    </div>
</div>
