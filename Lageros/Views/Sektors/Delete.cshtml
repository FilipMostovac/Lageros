@model Lageros.Models.Sektor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Brisanje</h1>

<h3>Da li ste sigurni da želite obrisati traženi sektor?</h3>
<h4>Brisanjem ovog sektora obrisat će te i sve korisnike u tom sektoru!</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NazivSektora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NazivSektora)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="OBRIŠI" class="btn btn-success" /> |
        <input type="submit" asp-action="Index" value="Nazad na listu sektora" class="btn btn-dark" />
    </form>
</div>
