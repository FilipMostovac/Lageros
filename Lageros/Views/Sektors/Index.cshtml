@model IEnumerable<Lageros.Models.Sektor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sektori</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Novi sektor</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazivSektora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NazivSektora)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
