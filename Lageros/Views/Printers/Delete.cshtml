@model Lageros.Models.Printer

@{
    ViewData["Title"] = "Delete";
}

<h2>Da li ste sigurni da želite obrisati traženi printer?</h2>
<h5>Brisanjem printera obrisat ćete sve zamjene tonera povezane uz taj printer!</h5>
<h5>Jednom kada se obriše više nema povratka!</h5>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IP)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="OBRIŠI" class="btn btn-success" /> |
        <input type="submit" asp-action="Index" value="Nazad na listu printera" class="btn btn-dark" />
    </form>
</div>
