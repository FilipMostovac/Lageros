@model IEnumerable<Lageros.Models.Printer>

@{
    ViewData["Title"] = "Index";
}

<h1>Printeri</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Novi printer</a>
</p>

<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IP)
            </th>
            <th>
                <a>Web Konzola</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody >
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IP)
            </td>
            <td>
                <a class="btn btn-dark" href="http://@Html.DisplayFor(modelItem => item.IP)" target="_blank">LINK</a>
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
