@model Lageros.Models.Izdavanje

@{
    ViewData["Title"] = "Create";
}

    <h1>Novo izdavanje</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-success"></div>
            <div class="form-group">
                <label asp-for="KorisnikId" class="control-label"></label>
                <select asp-for="KorisnikId" class="form-control" asp-items="ViewBag.KorisnikId">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LaptopId" class="control-label"></label>
                <select asp-for="LaptopId" class="form-control" asp-items="ViewBag.LaptopId">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MonitorId" class="control-label"></label>
                <select asp-for="MonitorId" class="form-control" asp-items="ViewBag.MonitorId">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PeriferijaId" class="control-label"></label>
                <select asp-for="PeriferijaId" class="form-control" asp-items="ViewBag.PeriferijaId">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DatumZamjene" class="control-label"></label>
                <input asp-for="DatumZamjene" class="form-control" />
                <span asp-validation-for="DatumZamjene" class="text-success"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminKorisnikId" class="control-label"></label>
                <select asp-for="AdminKorisnikId" class="form-control" asp-items="ViewBag.AdminKorisnikId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="SPREMI" class="btn btn-success" /> |
                <input type="submit" asp-action="Index" value="Nazad na listu izdavanja" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

