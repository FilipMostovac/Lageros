@model Lageros.Models.Izdavanje

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Uredi</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="KorisnikId" class="control-label"></label>
                <select asp-for="KorisnikId" class="form-control" asp-items="ViewBag.KorisnikId"></select>
                <span asp-validation-for="KorisnikId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaptopId" class="control-label"></label>
                <select asp-for="LaptopId" class="form-control" asp-items="ViewBag.LaptopId"></select>
                <span asp-validation-for="LaptopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonitorId" class="control-label"></label>
                <select asp-for="MonitorId" class="form-control" asp-items="ViewBag.MonitorId"></select>
                <span asp-validation-for="MonitorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriferijaId" class="control-label"></label>
                <select asp-for="PeriferijaId" class="form-control" asp-items="ViewBag.PeriferijaId"></select>
                <span asp-validation-for="PeriferijaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumZamjene" class="control-label"></label>
                <input asp-for="DatumZamjene" class="form-control" />
                <span asp-validation-for="DatumZamjene" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminKorisnikId" class="control-label"></label>
                <select asp-for="AdminKorisnikId" class="form-control" asp-items="ViewBag.AdminKorisnikId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="SPREMI" class="btn btn-danger" /> |
                <input type="submit" asp-action="Index" value="Nazad na listu izdavanja" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
