@model IEnumerable<Lageros.Models.AdminKorisnik>

@{
    ViewData["Title"] = "Index";
}

<h1>Administratori</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Novi admininstrator</a>
</p>
<table class="table text-center">
    <thead thead-dark>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr scope="row">
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
